<div class="container">
  <a href="/show/<%= @idea.user.id %>">Profile</a>
  <h1><%= @idea.user.alias.capitalize %> says:</h1>
  <h3 style="border:1px solid black"><%= @idea.content.capitalize %></h3>



  <h4>People who liked this idea:</h4>

  <table class="table table-hover" style="width:50%">
    <thead>
      <tr>
        <th>Alias</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @liked_users.each do |user| %>
        <tr>
          <td><a href="/view/<%= user.id %>"><%= user.alias.capitalize %></a></td>
          <td><%= user.name.capitalize %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
